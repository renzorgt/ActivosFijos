                <label class="form-label">Nombre</label>
                <input type="text" class="form-control form-control-sm" asp-for="nombre" />
            </div>  
            <div class="mb-2">
                <label class="form-label">Descripcion</label>
                <input type="text" class="form-control form-control-sm" asp-for="descripcion" />
            </div>
            <div class="mb-2">

                <label class="form-label">tipo</label>
                <input type="text" class="form-control form-control-sm" asp-for="tipo"/>
            </div>
            <div class="mb-2">
                <label class="form-label">serial</label>
                <input type="text" class="form-control form-control-sm" asp-for="serial" />
            </div>
            <div class="mb-2">
                <label class="form-label">numero_inventario</label>
                <input type="text" class="form-control form-control-sm" asp-for="numero_inventario" />
            </div>
            <div class="mb-2">
                <label class="form-label">peso</label>
                <input type="text" class="form-control form-control-sm" asp-for="peso" />
