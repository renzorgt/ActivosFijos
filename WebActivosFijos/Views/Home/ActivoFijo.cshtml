            <div class="mb-2">
                <label class="form-label">alto</label>
                <input type="text" class="form-control form-control-sm" asp-for="alto" />
            </div>
            <div class="mb-2">
                <label class="form-label">ancho</label>
                <input type="text" class="form-control form-control-sm" asp-for="ancho" />
            </div>
            <div class="mb-2">
                <label class="form-label">largo</label>
                <input type="text" class="form-control form-control-sm" asp-for="largo" />
            </div>
            <div class="mb-2">
                <label class="form-label">valor_compra</label>
                <input type="text" class="form-control form-control-sm" asp-for="valor_compra" />
            </div>
            <div class="mb-2">
                <label class="form-label">fecha_compra</label>
                <input type="text" class="form-control form-control-sm" asp-for="fecha_compra" />
