                <input type="text" class="form-control form-control-sm" asp-for="estado_actual" />
            </div>
            <div class="mb-2">
                <label class="form-label">idarea</label>
                <input type="text" class="form-control form-control-sm" asp-for="idarea" />
            </div>
            <div class="mb-2">
                <label class="form-label">idpersona</label>
                <input type="text" class="form-control form-control-sm" asp-for="idpersona" />
            </div>

            <div class="mb-2">
                <label class="form-label">idciudad</label>
                <input type="text" class="form-control form-control-sm" asp-for="idciudad" />
            </div>
            
            <button type="submit" class=" btn btn-success btn-sm"> Guardar</button>
            <a asp-action="Index" asp-controller="Home"  class="btn btn-outline-primary">Regresar</a>

        </form>

        <a asp-action="ActivoFijo" asp-controller="Home" asp-route-itemid="0" class="btn btn-outline-primary">Nuevo Activo</a>
    </div>


    </div>

