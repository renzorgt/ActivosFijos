@model ActivoFijoInsert

@{
    ViewData["Title"] = "ActivoFijo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ActivoFijo</h1>

<div class="card">
    <div class="card-header">
        @ViewBag.Accion
